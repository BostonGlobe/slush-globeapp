.clearfix
  clearfix()

figure
  margin 2em auto

.figure
  // block level
  &__full
    width 100%

  &__wide
    width 100%
    max-width 65em

  &__inline
    width 100%
    max-width 40em

  &__inset
   width 100%
   max-width 25em

  &__double
    width 100%
    max-width 90em
    display block

    .figure__img
      width 100%
      display block
      margin-bottom 1em
      +mq('bp-2')
        float left
        width 49.5%
        margin 0 .5% 0 0

    &:first-of-type
      margin-bottom 1rem

  // side elements
  &__side
    max-width 70rem
    margin 1rem auto 1.5rem

    &--md
      float none
      +mq('bp-2')
        width 25rem
        margin 0 1rem 0 2rem
        float right

    &--md2
      float none
      +mq('bp-2')
        width 15rem
        margin 0 1rem 0 2rem
        float right

    &--sm
      float none
      max-width 10em
      width 100%
      margin 0 auto
      +mq('bp-2')
        width 12rem
        margin 0 1rem
        float right

.figure__credit
  color $black-hed

.figure__caption
  font-size 0.9rem
  line-height 1.6
  margin-top .5em
  padding 0 1em
  width 100%
  font-size .8rem
  +mq('bp-2')
    padding 0 .5em
    font-size .9rem

.full__caption
  font-size 0.8rem
  line-height 1.6
  margin-top .5em
  padding 0 1em
  width 100%
  +mq('bp-2')
    font-size .9rem
