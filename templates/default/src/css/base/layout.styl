// ---------------------------------------
// Layouts
// ---------------------------------------

// Setting root sizes and base styles.
html
	text-size-adjust 100%

body
	font-feature-settings 'kern' 1, 'onum' 1, 'liga' 1
	font-family $serif

a[href]:not([class])
	transition color 0.1s, background-color 0.1s
	color $globe-blue
	text-decoration none
	&:hover, &:active, &:focus
		color darken($globe-blue, 20)
		text-decoration none
		
nav ul
	list-style none

img, video
	display block
	width 100%

button
	cursor pointer

// Methode defaults
.methode-graf
	max-width 35rem
	width 90%

// Base button extend
$btn
	display inline-block
	text-align center
	overflow visible
	vertical-align middle
	border none
	text-decoration none
	transition 0.2s ease-in-out all

// Various hides
.hide-accessible
	hidden(accessible)
.hide-invisible
	hidden(invisible)
.hide-display
	hidden()

// Skip to main for accessibility
.skip-to-main
	hidden(accessible)
	&:focus 
		width auto
		height auto
		background-color #efefef
		padding 0.5em
		z-index 1

// SVG for MS High Contrast Mode
svg
	@media screen and (-ms-high-contrast: active)
		// select a color that will contrast 
		// well on black or white because other 
		// color modes can be chosen and you 
		// need a color that will work with either 
		fill #0074d9
	@media screen and (-ms-high-contrast: black-on-white)
		// select a dark color that will 
		// contrast on black
		// (#fff is too much contrast) 
		fill #333
	@media screen and (-ms-high-contrast: white-on-black)
		// select a light color that will 
		// contrast on white 
		// (#000 is too much contrast)
		fill #efefef