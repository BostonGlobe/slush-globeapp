{{#if teasers}}
<div class='teasers'>
	<h4 class='teasers--title'>Up next</h4>
	<ul class='teasers--list'>
		{{#each teasers}}
		<li class='teasers--item'>
			<a class='teasers--link' href='{{url}}' style="background-image: linear-gradient(rgba(0,0,0, 0.3), rgba(0,0,0,0.4)), url({{image}});">
				<h3 class='teasers--hed'>{{title}}</h3>
			</a>
		</li>
		{{/each}}
	</ul>
</div>
{{/if}}
