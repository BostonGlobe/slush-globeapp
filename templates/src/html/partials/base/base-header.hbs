<a href='#content' class='skip-to-main'>Skip to main content</a>
<header role='banner' class='g-header {{meta.header_color}}'>
	<div class='g-header--inner'>
		<div class="g-header--logo">
			<a href='http://www.bostonglobe.com'>
				@@include('g-logo.svg')
				@@include('g-logo--sm.svg')
			</a>
		</div>
		<nav role='navigation' class='g-header--title'>
			<ul>
				<li><a href="{{meta.section_url}}">{{meta.section}}</a></li>
			</ul>
		</nav>
		<ul class='g-header--social-list'>
			<li class='g-header--social-item'>
				<a href='#' class='share-fb' target='_blank'>
					@@include('facebook.svg')
				</a>
			</li>
			<li class='g-header--social-item'>
				<a href='#' class='share-tw' target='_blank'>
					@@include('twitter.svg')
				</a>
			</li>
		</ul>
	</div>
</header>
