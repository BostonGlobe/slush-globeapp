// ---------------------------------------
// Layouts
// ---------------------------------------

// Setting root sizes and base styles.
html
	text-size-adjust 100%

body
	font-feature-settings 'kern' 1, 'onum' 1, 'liga' 1
a
	transition color 0.1s, background-color 0.1s
	color $globe-blue
	text-decoration none
	&:hover, &:active, &:focus
		color darken($globe-blue, 20)
		text-decoration none
		
nav ul
	list-style none

img, video
	display block
	width 100%

button
	cursor pointer

$btn
	display inline-block
	text-align center
	overflow visible
	vertical-align middle
	border none
	text-decoration none
	transition 0.2s ease-in-out all

// Various hides
.hide-accessible
	hidden(accessible)
.hide-invisible
	hidden(invisible)
.hide-display
	hidden()

// Skip to main for accessibility
.skip-to-main
	hidden(accessible)
	&:focus 
		width auto
		height auto
		background-color #efefef
		padding 0.5em
		z-index 1