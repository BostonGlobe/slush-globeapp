// Skip to main for accessibility
.skip-to-main
	hidden(accessible)
	&:focus 
		width auto
		height auto
		background-color #efefef
		padding 0.5em
		z-index 1

 // fade image in after load with lazysizes
.lazyload
	filter blur(2px)

.lazyloaded
	filter blur(none)
