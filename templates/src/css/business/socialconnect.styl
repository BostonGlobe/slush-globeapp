@require '../base/variables'
@require '../base/helpers'
@require '../base/colors'

$offblack = #333
$offwhite = #efefef
$lt-gray = #eee

.socialconnect 
	position fixed 
	top 0 
	left 0
	width 100%
	height 100vh
	background-color rgba(#fff, 0.85)
	display flex
	align-items center
	justify-content center
	
	&.display-none
		display none
	
	&--contain
		background-color #fff
		padding 3em 1.5em 1em 1.5em
		box-shadow 0 0 8px #ccc
		border-radius 3px
		max-width 25em
		margin 1em
		text-align center
		position relative
		
		* + *
			margin 0 auto 1em auto
			display block
			
			&:last-child
				margin 0 auto
	
	&--close
		position absolute
		left 1em
		top 1em
		// I've never done an important but I am lazy right now
		font-family Helvetica !important
		font-weight normal !important
		border none
		background-color transparent
		opacity 0.5
		cursor pointer
		transition $ease
		
		&:hover
			opacity 1
		
	
	&--hed
		font($miller-banner, $bold)
		font-size 2em
		line-height 1.1
		color $offblack
		border-bottom 1px solid #efefef
		margin-bottom 0.5em
		padding-bottom 0.25em
		
		+mq('bp-2')
			font-size 2.5em
		
		span
			color #FF6B6B
			font-style italic
	
	button
		font($benton, $bold)
		cursor pointer
		font-size 0.8em
		line-height 1
	
	&-facebook--button
		border none
		background-color #5975b1
		color #fff
		transition $ease
		padding 0.75em 1em
		border-radius 3px
		width 100%
		
		&:hover
			background-color darken(#5975b1, 15)
	
	&--separator
		font($miller-banner, $bold, italic)
		color $offblack
		
		&:before, &:after
			content ''
			display inline-block
			vertical-align middle
			position relative
			width 43%
			border-top 1px solid #efefef
			
		&:before
			right 1em
			margin-left -50%
		
		&:after
			left 1em
			margin-right -50%
	
	&-email--input
		margin 0 auto 1em auto
		display block
		
		border-left none
		border-right none
		border-top none
		border-bottom 5px solid #efefef
		width 100%
		padding 0.5em 0
		font($benton, $bold)
		font-size 0.9em
		transition $ease
		
		&:focus
			outline none
			border-bottom 5px solid #FF6B6B
			
			&::placeholder
				color $offblack
	
	&-email--button
		background-color #f2f2e8
		border 1px solid #c1c1b9
		color $offblack
		transition $ease
		padding 0.75em 1em
		border-radius 3px
		width 100%
		
		&:hover
			background-color $offblack
			color $offwhite
			border-color $offblack
	
	&--small
		font($benton)
		font-size 0.75em
		color lighten($offblack, 30)
		padding-top 1em

.sign-in
	font-weight $bold

.invisible
	visibility hidden